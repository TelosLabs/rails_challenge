<p class="text-green-500"><%= notice %></p>

<h1 class="text-2xl font-bold mb-4">Courses</h1>

<div id="courses" class="flex flex-col w-full">
  <% @courses.each do |course| %>
    <div class="w-full p-4">
      <%= render course %>
      <p>
        <%= link_to "Show this course", course, class: "text-blue-500" %>
      </p>
    </div>
  <% end %>

  <%= link_to "New course", new_course_path, class: "text-blue-500" %>
</div>

